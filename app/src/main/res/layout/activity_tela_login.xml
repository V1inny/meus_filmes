<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaLogin"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#000">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logo3"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seja bem-vindo de volta!"
            android:textSize="10pt"
            android:textStyle="bold"
            android:textColor="#fff"/>
        <EditText
            android:id="@+id/edit_email_login"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_caixa"
            android:hint="Email"
            android:padding="15dp"
            android:inputType="textEmailAddress"
            android:layout_marginTop="15dp"
            android:textColorHint="#fff"
            android:textColor="#fff"/>
        <EditText
            android:id="@+id/edit_senha_login"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_caixa"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:textColorHint="#fff"
            android:textColor="#fff"/>

        <TextView
            android:id="@+id/txtEsqueci_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esqueci a minha senha"
            android:layout_marginTop="15dp"
            android:textColor="#fff"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_entrar_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn1"
            android:text="Entrar"
            android:padding="15sp"
            android:layout_marginTop="15dp"
            android:textColor="#000"/>

</LinearLayout>